<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.MealMate" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/work_sans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TextAppearance.MealMate.Title" parent="TextAppearance.MealMate">
        <item name="fontFamily">@font/work_sans_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.MealMate.Subtitle" parent="TextAppearance.MealMate">
        <item name="fontFamily">@font/work_sans_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.MealMate.Body" parent="TextAppearance.MealMate">
        <item name="fontFamily">@font/work_sans_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.MealMate.Caption" parent="TextAppearance.MealMate">
        <item name="fontFamily">@font/work_sans_light</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="CustomPrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/button_ripple_color</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">12dp</item>
        <item name="elevation">12dp</item>
        <item name="shapeAppearance">@style/Widget.Material3.Button.ElevatedButton</item>
    </style>

    <style name="CustomTextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="CustomTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="CustomFieldTitle">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
