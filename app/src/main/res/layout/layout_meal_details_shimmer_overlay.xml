<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    app:shimmer_auto_start="false"
    app:shimmer_base_alpha="0.7"
    app:shimmer_direction="left_to_right"
    app:shimmer_duration="1000"
    app:shimmer_repeat_count="-1"
    app:shimmer_repeat_delay="0"
    app:shimmer_repeat_mode="restart"
    app:shimmer_shape="linear"
    app:shimmer_tilt="20">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/shimmer_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/shimmer_placeholder"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-40dp"
            android:background="@drawable/bg_rounded_top_sheet"
            android:paddingHorizontal="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="30dp"
            app:layout_constraintTop_toBottomOf="@id/shimmer_image">

            <View
                android:id="@+id/shimmer_title"
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_marginEnd="80dp"
                android:background="@drawable/shimmer_placeholder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/shimmer_divider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/colorSkeleton"
                app:layout_constraintTop_toBottomOf="@id/shimmer_title" />

            <View
                android:id="@+id/shimmer_ingredients_title"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shimmer_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shimmer_divider1" />

            <View
                android:id="@+id/shimmer_badge"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/shimmer_placeholder"
                app:layout_constraintBottom_toBottomOf="@id/shimmer_ingredients_title"
                app:layout_constraintStart_toEndOf="@id/shimmer_ingredients_title"
                app:layout_constraintTop_toTopOf="@id/shimmer_ingredients_title" />

            <LinearLayout
                android:id="@+id/shimmer_ingredients_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/shimmer_ingredients_title">

                <View
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/shimmer_placeholder" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/shimmer_placeholder" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shimmer_ingredients_row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/shimmer_ingredients_row">

                <View
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/shimmer_placeholder" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/shimmer_placeholder" />
            </LinearLayout>

            <View
                android:id="@+id/shimmer_divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/colorSkeleton"
                app:layout_constraintTop_toBottomOf="@id/shimmer_ingredients_row2" />

            <View
                android:id="@+id/shimmer_prep_title"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shimmer_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/shimmer_divider2" />

            <View
                android:id="@+id/shimmer_step1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/shimmer_placeholder"
                app:layout_constraintTop_toBottomOf="@id/shimmer_prep_title" />

            <View
                android:id="@+id/shimmer_step2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/shimmer_placeholder"
                app:layout_constraintTop_toBottomOf="@id/shimmer_step1" />

            <View
                android:id="@+id/shimmer_step3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/shimmer_placeholder"
                app:layout_constraintTop_toBottomOf="@id/shimmer_step2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>
