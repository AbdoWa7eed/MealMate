<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_trending_recipe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="@color/colorSurface"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_trending_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_trending_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/recipe_thumbnail"
                android:scaleType="centerCrop"
                android:src="@drawable/onboarding_image_2" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_trending_name"
            style="@style/TextAppearance.MealMate.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="40dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/recipe_title"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_trending_thumbnail"
            app:layout_constraintTop_toTopOf="@+id/card_trending_thumbnail" />

        <TextView
            android:id="@+id/text_trending_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text="@string/recipe_category"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/card_trending_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/text_trending_name" />

        <TextView
            android:id="@+id/text_trending_separator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="â€¢"
            android:textColor="@color/colorTextSecondary"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_trending_category"
            app:layout_constraintStart_toEndOf="@+id/text_trending_category"
            app:layout_constraintTop_toTopOf="@+id/text_trending_category" />

        <TextView
            android:id="@+id/text_trending_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/recipe_country"
            android:textColor="@color/colorBlue"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/text_trending_category"
            app:layout_constraintStart_toEndOf="@+id/text_trending_separator"
            app:layout_constraintTop_toTopOf="@+id/text_trending_category" />


        <FrameLayout
            android:id="@+id/button_trending_favorite"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/ripple_favorite_circle"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_trending_name">

            <ImageView
                android:id="@+id/button_fav_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="Add to favorites"
                android:src="@drawable/ic_fav_filled" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>