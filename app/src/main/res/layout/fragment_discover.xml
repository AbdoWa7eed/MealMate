<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingHorizontal="16dp"
    tools:context=".ui.discover.DiscoverFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_search"
        style="@style/CustomTextField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text"
        app:endIconTint="@color/colorTextSecondary"
        app:errorEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@android:drawable/ic_menu_search"
        app:startIconTint="@color/colorPrimary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_search"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:imeOptions="actionSearch"
            android:paddingStart="40dp"
            android:inputType="text"
            android:hint="@string/discover_search_hint"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorTextPrimary"
            android:textColorHint="@color/colorTextSecondary" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_filters"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        app:chipSpacingHorizontal="8dp"
        app:chipSpacingVertical="8dp"
        app:selectionRequired="true"
        app:singleSelection="true"
        app:layout_constraintTop_toBottomOf="@id/text_input_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_category"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discover_chip_category"
            android:textColor="@color/discover_chip_text_color"
            android:textSize="14sp"
            app:checkedIconVisible="false"
            app:checkedIcon="@null"
            app:chipBackgroundColor="@color/discover_chip_background"
            app:chipCornerRadius="10dp"
            app:chipMinHeight="40dp"
            app:chipStartPadding="8dp"
            app:chipEndPadding="8dp"
            app:rippleColor="@color/colorPrimaryLight" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_country"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discover_chip_country"
            android:textColor="@color/discover_chip_text_color"
            android:textSize="14sp"
            app:checkedIconVisible="false"
            app:checkedIcon="@null"
            app:chipBackgroundColor="@color/discover_chip_background"
            app:chipCornerRadius="10dp"
            app:chipMinHeight="40dp"
            app:chipStartPadding="8dp"
            app:chipEndPadding="8dp"
            app:rippleColor="@color/colorPrimaryLight" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_ingredients"
            style="@style/Widget.MaterialComponents.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discover_chip_ingredients"
            android:textColor="@color/discover_chip_text_color"
            android:textSize="14sp"
            app:checkedIconVisible="false"
            app:checkedIcon="@null"
            app:chipBackgroundColor="@color/discover_chip_background"
            app:chipCornerRadius="10dp"
            app:chipMinHeight="40dp"
            app:chipStartPadding="8dp"
            app:chipEndPadding="8dp"
            app:rippleColor="@color/colorPrimaryLight" />

    </com.google.android.material.chip.ChipGroup>

    <GridView
        android:id="@+id/grid_discover_results"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:gravity="top"
        android:horizontalSpacing="16dp"
        android:numColumns="2"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="16dp"
        app:layout_constraintTop_toBottomOf="@id/chip_group_filters"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:itemCount="8"
        tools:listitem="@layout/item_discover_result"
        tools:numColumns="2" />

    <LinearLayout
        android:id="@+id/empty_state_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/grid_discover_results"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/image_empty_logo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:alpha="0.7"
            android:contentDescription="@string/app_name"
            android:src="@drawable/logo_circled"
            android:tint="@color/colorTextSecondary" />

        <TextView
            android:id="@+id/text_empty_state"
            style="@style/TextAppearance.MealMate.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/discover_empty_state"
            android:textAlignment="center"
            android:textColor="@color/colorTextSecondary" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


